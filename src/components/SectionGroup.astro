---
import { getCurrentSection } from "../util/util";

export interface Props {
  currentPage: string;
}

const { currentPage } = Astro.props;

const activeSection = getCurrentSection(currentPage);

const sections = [
  { name: "Learn", href: "/learn/getting-started/" },
  { name: "Reference", href: "/reference/createApplicationCommandHandler" },
];

const active =
  "border-b-[2px] dark:border-b-[var(--dark-accent)] border-b-[#4e4c4b] text-[#4e4c4b] dark:text-[var(--dark-accent)]";
---

<nav class="text-md mx-0 mb-2 flex w-auto justify-around">
  {
    sections.map((section) => (
      <a
        href={section.href}
        class={
          "flex w-full items-center justify-center py-2 px-6  " +
          (activeSection === section.name.toLowerCase() ? active : "border-b-[1px] border-b-[#4e4c4b]")
        }
      >
        {section.name}
      </a>
    ))
  }
</nav>
