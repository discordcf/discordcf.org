---
import { IoArrowForward } from 'react-icons/io5';

export interface Props {
  title: string;
  description: string;
  goTo: string;
}

const { title, description, goTo } = Astro.props as Props;
---

<div class="flex flex-col gap-6 rounded-md p-6 text-white dark:bg-slate-700">
  <div class="flex flex-col gap-2">
    <span class="text-xl font-bold">{title}</span>
    <p>{description}</p>
  </div>
  <a href={goTo} class="no-underline">
    <button class="flex items-center gap-4 justify-center rounded-md px-4 py-2 dark:bg-sky-400 dark:hover:bg-sky-600">
        Read more
        <IoArrowForward/>
    </button>
  </a>
</div>
